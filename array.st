print("--- ARRAY TEST ---")

# 1. Creation
let numbers = [10, 20, 30, 40]
print("List created: " + numbers)

# 2. Indexing
print("First item: " + numbers[0])
print("Last item: " + numbers[3])

# 3. Math with indices
let sum = numbers[0] + numbers[1]
print("Sum of first two: " + sum)

# 4. Expressions as indices
let i = 2
print("Item at index i: " + numbers[i])

# 5. Nested Lists (Matrix)
let matrix = [[1, 2], [3, 4]]
print("Matrix item [1][0]: " + matrix[1][0])